<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jurajpaulik.legonxt.Programovanie">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Field1"
        android:clickable="true"
        android:onClick="changeIcon1"
        android:longClickable="false"
        android:enabled="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignTop="@+id/Field2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Field2"
        android:clickable="true"
        android:onClick="changeIcon2"
        android:longClickable="false"
        android:layout_alignTop="@+id/Field3"
        android:layout_toRightOf="@+id/Field1"
        android:layout_toEndOf="@+id/Field1" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Field3"
        android:clickable="true"
        android:onClick="changeIcon3"
        android:longClickable="false"
        android:layout_alignTop="@+id/Field5"
        android:layout_toRightOf="@+id/Field2"
        android:layout_toEndOf="@+id/Field2" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Field4"
        android:clickable="true"
        android:onClick="changeIcon4"
        android:longClickable="false"
        android:layout_alignTop="@+id/Field3"
        android:layout_toRightOf="@+id/Field3"
        android:layout_toEndOf="@+id/Field3" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/Field5"
        android:clickable="true"
        android:onClick="changeIcon5"
        android:longClickable="false"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/Field4"
        android:layout_toEndOf="@+id/Field4" />

    <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="Start"
        android:id="@+id/buttonStart"
        android:clickable="true"
        android:gravity="center"
        android:onClick="startProgramovanie"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Field1"
        android:layout_alignStart="@+id/Field1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/par1"
        android:layout_below="@+id/Field1"
        android:layout_toLeftOf="@+id/Field2"
        android:layout_alignLeft="@+id/Field1"
        android:layout_alignStart="@+id/Field1"
        android:editable="true"
        android:enabled="true"
        android:numeric="integer"
        android:text="1"
        android:textAlignment="center"
        android:textSize="15dp"
        android:singleLine="true"
        android:lines="1"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/par2"
        android:editable="true"
        android:enabled="true"
        android:numeric="integer"
        android:text="1"
        android:textAlignment="center"
        android:textSize="15dp"
        android:singleLine="true"
        android:lines="1"
        android:gravity="center"
        android:layout_below="@+id/Field1"
        android:layout_toLeftOf="@+id/Field3"
        android:layout_toRightOf="@+id/Field1"
        android:layout_toEndOf="@+id/Field1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/par3"
        android:editable="true"
        android:enabled="true"
        android:numeric="integer"
        android:text="1"
        android:textAlignment="center"
        android:textSize="15dp"
        android:singleLine="true"
        android:lines="1"
        android:gravity="center"
        android:layout_below="@+id/Field2"
        android:layout_toLeftOf="@+id/Field4"
        android:layout_toRightOf="@+id/Field2"
        android:layout_toEndOf="@+id/Field2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/par4"
        android:editable="true"
        android:enabled="true"
        android:numeric="integer"
        android:text="1"
        android:textAlignment="center"
        android:textSize="15dp"
        android:singleLine="true"
        android:lines="1"
        android:gravity="center"
        android:layout_below="@+id/Field3"
        android:layout_toLeftOf="@+id/Field5"
        android:layout_alignLeft="@+id/Field4"
        android:layout_alignStart="@+id/Field4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/par5"
        android:editable="true"
        android:enabled="true"
        android:numeric="integer"
        android:text="1"
        android:textAlignment="center"
        android:textSize="15dp"
        android:singleLine="true"
        android:lines="1"
        android:gravity="center"
        android:layout_below="@+id/Field4"
        android:layout_alignRight="@+id/Field5"
        android:layout_alignEnd="@+id/Field5"
        android:layout_toRightOf="@+id/Field4"
        android:layout_toEndOf="@+id/Field4" />

</RelativeLayout>
